<div class="jumbotron">
  <h2 class="white">Best direct to sales market place</h2>
  <h4 class= "white">Simply, something special</h4>
</div>
<p id="notice"><%= notice %></p>

<h2>Top Choices</h2>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: {no_turbolink: true} %>
<% end %>