<div class="landing-image center">
  <h2 class="white top150 main-title">NOTHING ORDINARY</h2>
  <h4 class= "white sub-title">something special by unique people</h4>
  
  <form class="form-inline center main-search">
      <%= form_tag listings_path, :method => 'get' do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: "form-control input-md height50", placeholder: "What would you like to find?" %>
        </div>
        <div class="form-group height50">
          <button type="submit" class="btn btn-md btn-default col-xs-12 height50" id="seek">Search</button>
        </div>
      <% end %>
  </form>

</div>

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h2 class="center sub-heading">Top Choices</h2>
    <div class="center">
      <div class="row">
        <% @listings.each do |listing| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
              <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price) %></p>
                <p><%= "Sold by #{listing.user.name}" %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>  
  </div>


  <br>
  <% if user_signed_in? %>
    <%#= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: {no_turbolink: true} %>
  <% end %>

</div>  